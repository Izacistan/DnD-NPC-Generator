@model RegisterViewModel;
@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DnD 5e NPC Generator</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700;800&family=EB+Garamond:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
</head>
<body class="page-wrap">
    <section class="login-form_wrap page-center">
        <!-- SIGN UP Form -->
        <div class="login-section_wrap">
            <h2 class="subhead align-center">Sign-Up</h2>
            <form method="post" asp-action="Register" class="login-form">
                <div class="login_label-input_wrap">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Username</label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input type="passsword" type="password" asp-for="Password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <input type="submit" name="submit-login" class="button-primary" value="Sign Up!">
                </div>
            </form>
        </div>
    </section>
</body>
</html>