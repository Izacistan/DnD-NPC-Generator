@model RegisterViewModel;
@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DnD 5e NPC Generator</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700;800&family=EB+Garamond:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
</head>
<body class="page-wrap">
    <section class="login-form_wrap page-center">
        <!-- SIGN UP Form -->
        <div class="login-section_wrap">
            <h2 class="subhead align-center">Sign-Up</h2>
            <form method="post" asp-action="Register" class="login-form">
                <div class="login_label-input_wrap">

                    <label for="UserName">Username</label>
                    <input asp-for="UserName" placeholder="Enter username"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <label for="password">Password</label>
                    <input asp-for="Password" type="password" name="password" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input asp-for="ConfirmPassword" type="password" name="confirmPassword" placeholder="Enter your password">

                    <input type="submit" name="submit-login" class="button-primary" value="Sign Up!">
                </div>
            </form>
        </div>
    </section>
</body>
</html>