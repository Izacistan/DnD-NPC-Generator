@using DnD_NPC_Generator.Models;
@model DnD_NPC_Generator.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DnD 5e NPC Generator</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700;800&family=EB+Garamond:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
</head>
<body class="page-wrap">
    <section class="login-form_wrap page-center">
        <div class="login-section_wrap">
            <h2 class="subhead align-center">Login</h2>
            <!-- LOGIN Form -->
            <form method="post" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl" class="login-form">
                <div class="login_label-input_wrap">

                    <label for="UserName">Username</label>
                    <input asp-for="UserName" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <label for="password">Password</label>
                    <input type="password" asp-for="Password" name="password" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input type="checkbox" title="Remember Me" asp-for="RememberMe"/>
                    <label>Remember Me</label>

                    <input type="submit" name="submit-login" class="button-primary" value="Login">
                </div>
            </form>
        </div>
    </section>
</body>
</html>